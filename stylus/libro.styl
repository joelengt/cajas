.libro
	background olive
	&__box
		width 100%
		text-align center
		margin 0 auto
		padding-top 2em
		padding-bottom 2em
	&__col1
		background aqua
		width 100%
		display block
		margin-bottom 1em
		h2
			font-size 1.6em
		p
			padding 15px
	&__col2
		background purple
		width 100%
		display block
		padding-top 1em
		padding-bottom 1em
		
@media (min-width 768px)
	.libro
		&__box
			width 100%
			text-align center
			margin 0 auto
		&__col1
			width 35%
			display inline-block
			vertical-align middle
		&__col2
			width 55%
			display inline-block
			vertical-align middle
			
			
			

